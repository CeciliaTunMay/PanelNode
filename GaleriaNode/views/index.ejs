    <title>Galería de Imágenes</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
  </head>
  <body>
    <div class="container">
      <br />
        <div class="row">
            <div class="col-md-12">
              <center><h1>Galería de Imágenes</h1></center>
              <h4><b>Subir nueva imagen</b></h4>

              <form action="/AgregarImagen" method="post" enctype="multipart/form-data">
                <span>Nombre<span>
                <input type="text" name="nombre" id="nombre">
                <span>Descripción</span>
                <input type="text" name="descripcion" id="descripcion">
                <span>Imagen</span>
                <input type="file" name="imagen" id="imagen" accept="image/*">
                <input type="submit" value="Subir" class="btn btn-primary">
              </form>

            </div>
          </div>
          <hr />

          <div class="row">
            <% for (var i = 0; i < imagenes.length; i++) { %>

              <div class="col-md-4" style="width: 300px">
                  <img  style="height: 350px" src="images/<%= imagenes[i].imagen %>"/>
                  <hr />
                  <p><b><%= imagenes[i].nombre %></p></b>
                  <p><%= imagenes[i].descripcion %></p>
                  <br />
                </div>

            <% } %>
          </div>
    </div>
  </body>
</html>
